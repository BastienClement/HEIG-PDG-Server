PATCH         /events/:id                 controllers.DummyController.nyi1(id)
DELETE        /events/:id                 controllers.DummyController.nyi1(id)

GET           /users                      controllers.UsersController.list
GET           /users/:uid                 controllers.UsersController.user(uid)
PUT           /users/:uid/location        controllers.UsersController.location(uid)

